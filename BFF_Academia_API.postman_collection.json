			"item": [
				{
					"name": "Cadastro - Novo Cliente",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"const response = pm.response.json();",
									"if (response.success && response.data && response.data.token) {",
									"    pm.collectionVariables.set('token', response.data.token);",
									"    console.log('Token salvo automaticamente!');",
									"}"
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							},
							{
								"key": "Accept",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"nome\": \"Carlos Pereira\",\n  \"username\": \"carlospereira\",\n  \"email\": \"carlos@email.com\",\n  \"senha\": \"senha789\",\n  \"telefone\": \"11966666666\",\n  \"cpf\": \"11122233344\",\n  \"endereco\": \"Rua das Flores, 100\",\n  \"dataNascimento\": \"1992-08-10\"\n}"
						},
						"url": {
							"raw": "{{base_url}}/api/bff/auth/cadastro",
							"host": [
								"{{base_url}}"
							],
							"path": [
								"api",
								"bff",
								"auth",
								"cadastro"
							]
						},
						"description": "Registra um novo cliente no sistema via BFF (faz proxy para o backend)"
					},
					"response": []
				},
				{
					"name": "Login",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"const response = pm.response.json();",
									"if (response.success && response.data && response.data.token) {",
									"    pm.collectionVariables.set('token', response.data.token);",
									"    pm.collectionVariables.set('user_id', response.data.userId);",
									"    console.log('Token e User ID salvos automaticamente!');",
									"}"
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"method": "POST",
